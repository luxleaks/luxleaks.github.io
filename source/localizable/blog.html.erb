---
pageable: true
per_page: 10
---
<main id="content" class="anchor content blog">

  <h1><%= I18n.t("blog.title") %></h1>

  <% if paginate && num_pages > 1 %>
    <p>Page <%= page_number %> of <%= num_pages %></p>

    <% if prev_page %>
      <p><%= link_to 'Previous page', prev_page %></p>
    <% end %>
  <% end %>

  <% blog(I18n.locale).articles.each_with_index do |article, i| %>
    <article itemscope itemtype="http://schema.org/BlogPosting">
      <h2 itemprop="headline"><%= link_to article.title, article %></h2>
      <p itemprop="about"><%= article.data.subtitle %></p>
      <footer><span class="author" itemprop="author"><%= article.data.author %></span> â€” <time datetime="<%= article.date.strftime('%Y-%m-%d') %>" itemprop="datePublished"><%= I18n.l(article.date) %></time></footer>
   </article>
  <% end %>

  <% if paginate %>
    <% if next_page %>
      <p><%= link_to 'Next page', next_page %></p>
    <% end %>
  <% end %>

</main>
