---
pageable: true
per_page: 10
---
<main id="content" class="anchor content blog">

  <h1><%= I18n.t("blog.title") %></h1>

  <% if paginate && num_pages > 1 %>
    <p>Page <%= page_number %> of <%= num_pages %></p>

    <% if prev_page %>
      <p><%= link_to 'Previous page', prev_page %></p>
    <% end %>
  <% end %>

  <% page_articles(I18n.locale).each_with_index do |article, i| %>
    <article>
      <h2><%= link_to article.title, article %></h2>
      <p><%= article.data.subtitle %></p>
      <footer><span class="author"><%= article.data.author %></span> â€” <time datetime="<%= article.date.strftime('%Y-%m-%d') %>" pubdate><%= I18n.l(article.date) %></time></footer>
   </article>
  <% end %>

  <% if paginate %>
    <% if next_page %>
      <p><%= link_to 'Next page', next_page %></p>
    <% end %>
  <% end %>
  </section>
</main>
