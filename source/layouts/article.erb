<% wrap_layout :layout do %>
<main id="content" class="anchor content blog-article inline">
  <article>
  	<h1><%= current_page.title %></h1>
    <time datetime="<%= current_page.date.strftime('%Y-%m-%d') %>" pubdate><%= I18n.l(current_page.date) %></time>
    <%= yield %>
  </article>
</main>
<% end %>
